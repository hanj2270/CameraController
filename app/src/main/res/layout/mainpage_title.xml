<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_maincenter_title"
    android:layout_width="match_parent"
    android:layout_height="50dp">



        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/menu_left_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:id="@+id/menu_left_icon" />

    <ImageView
        android:src="@drawable/menu_right_icon"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/menu_left_right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="29dp"
        android:layout_alignTop="@+id/menu_left_icon"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

